<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="mercuryseries_inertia_maker.routing_history.previous_url_session_key">_mercuryseries_inertia_maker_routing_previous_url</parameter>
    </parameters>

    <services>
        <defaults public="false" />

        <service id="mercuryseries_inertia_maker.check_form_validation_state_subscriber"
            class="MercurySeries\Bundle\InertiaMakerBundle\EventSubscriber\Form\CheckFormValidationStateSubscriber"
        >
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="MercurySeries\Bundle\InertiaMakerBundle\EventSubscriber\Form\CheckFormValidationStateSubscriber"
            alias="mercuryseries_inertia_maker.check_form_validation_state_subscriber"
        />

        <!-- <service id="MercurySeries\Bundle\InertiaMakerBundle\Controller\AbstractController"
            class="MercurySeries\Bundle\InertiaMakerBundle\Controller\AbstractController"
        >
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <tag name="container.service_subscriber" />
            <tag name="controller.service_arguments" />
        </service> -->

        <service id="mercuryseries_inertia_maker.service.routing_history" class="MercurySeries\Bundle\InertiaMakerBundle\Service\RoutingHistory">
            <argument type="service" id="request_stack" />
            <argument>%mercuryseries_inertia_maker.routing_history.previous_url_session_key%</argument>
        </service>

        <service id="mercuryseries_inertia_maker.service.bundle_detector" class="MercurySeries\Bundle\InertiaMakerBundle\Service\BundleDetector">
            <argument type="service" id="filesystem" />
            <argument>%mercuryseries_inertia_maker.ssr.bundle%</argument>
            <argument>%kernel.project_dir%</argument>
        </service>

        <service id="mercuryseries_inertia_maker.command.start_ssr" class="MercurySeries\Bundle\InertiaMakerBundle\Command\StartInertiaSsrCommand">
            <argument type="service" id="mercuryseries_inertia_maker.service.bundle_detector" />
            <argument>%mercuryseries_inertia_maker.ssr.enabled%</argument>
            <argument>%mercuryseries_inertia_maker.ssr.bundle%</argument>
            <tag name="console.command" />
        </service>

        <service id="mercuryseries_inertia_maker.command.stop_ssr" class="MercurySeries\Bundle\InertiaMakerBundle\Command\StopInertiaSsrCommand">
            <argument>%mercuryseries_inertia_maker.ssr.url%</argument>
            <tag name="console.command" />
        </service>
    </services>
</container>
