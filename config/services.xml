<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="mercuryseries_inertia_maker.routing_history.previous_url_session_key">_mercuryseries_inertia_maker_routing_previous_url</parameter>
    </parameters>

    <services>
        <service id="mercuryseries_inertia_maker.bundle_detector" class="MercurySeries\Bundle\InertiaMakerBundle\Service\BundleDetector">
            <argument type="service" id="filesystem" />
            <argument>%mercuryseries_inertia_maker.ssr.bundle%</argument>
            <argument>%kernel.project_dir%</argument>
        </service>

        <service id="mercuryseries_inertia_maker.command.start_ssr" class="MercurySeries\Bundle\InertiaMakerBundle\Command\StartInertiaSsrCommand" public="true">
            <argument type="service" id="mercuryseries_inertia_maker.bundle_detector" />
            <argument>%mercuryseries_inertia_maker.ssr.enabled%</argument>
            <argument>%mercuryseries_inertia_maker.ssr.bundle%</argument>
            <tag name="console.command" />
        </service>

        <service id="mercuryseries_inertia_maker.command.stop_ssr" class="MercurySeries\Bundle\InertiaMakerBundle\Command\StopInertiaSsrCommand" public="true">
            <argument>%mercuryseries_inertia_maker.ssr.url%</argument>
            <tag name="console.command" />
        </service>
        <!-- <service id="mercuryseries_inertia_maker.generator" class="MercurySeries\Bundle\InertiaMakerBundle\Generator" public="false" /> -->
        <!-- <service id="MercurySeries\Bundle\InertiaMakerBundle\Generator" alias="mercuryseries_inertia_maker.generator" public="false" /> -->
    </services>
</container>
